{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [ 
            "dom",
            "dom.iterable"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        //"moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "outDir": "dist", 
    },
    "include": [
        "./artifacts",
        "./pages",
        "./scripts",
        "./components",
        "./typechain",
        "./test"
    ],
    "exclude": [
        "node_modules",
        "./contracts",
        "./public",
        "./cache"
    ],
    "files": ["./hardhat.config.ts"]
}